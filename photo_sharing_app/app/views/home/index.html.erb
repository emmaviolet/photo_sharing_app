<div id= "index">
  <% if @users.any? %>
    <h1>USERS</h1><br>
    <% @users.each do |user| %>
      <%= link_to user.username, user %>
    <% end %>
  <% end %>

  <% if @albums.any? %>
    <h1>ALBUMS</h1><br>
    <% @albums.each do |album| %>
      <%= link_to album.name, album %>
      <%= link_to image_tag(Photo.find(album.cover_photo_id).photo_file.url), album %>
      <br>
    <% end %>
  <% end %>

  <% if @photos.any? %>
    <h1>PHOTOS</h1><br>
    <% @photos.each do |photo| %>
      <%= link_to photo.name, photo %>
      <%= link_to image_tag(photo.photo_file.thumb.url), photo %>
      <br>
    <% end %>
  <% end %>

  <% if @photos.empty? && @albums.empty? && @users.empty? %>
    Sorry, we don't have any records that match your search query.
  <% end %>
</div>